@page
@model RegisterConfirmationModel
@{
    ViewData["Title"] = "Potwierdzenie rejestracji";
}

<h1>@ViewData["Title"]</h1>
@{
    if (@Model.DisplayConfirmAccountLink)
    {
                <p>
                    Ta aplikacja obecnie nie ma zarejestrowanego prawdziwego nadawcy e-mail, zobacz <a href="https://aka.ms/aspaccountconf">te dokumenty</a>, <a id="confirm-link" href="@Model.EmailConfirmationUrl">Kliknij tutaj, aby potwierdzić swoje konto</a>
                </p>
    }
    else
    {
                <p>
                    Proszę sprawdź swoją pocztę e-mail, aby potwierdzić swoje konto.
                </p>
    }
}
 <style>
        body {
            background-color: #f8f9fa;
            color: #333;
            font-family: Arial, sans-serif;
        }

        .jumbotron {
            background-color: #007bff;
            color: #fff;
            padding: 50px;
            border-radius: 0;
        }

        .jumbotron h1,
        .jumbotron p {
            text-align: center;
        }

    </style>
<body>
   <div class="container">
    <div class="jumbotron">
        <h1 class="display-4">Najczęściej Zadawane Pytania</h1>
    </div
</body>